section.container

	section.sidebar
		width 300px
		height 100%
		background darkBlueGrey
		position fixed
		top 0
		left 0

		.heading
			margin 50px auto

			img
				height 60px
				width 60px
				margin-right 10px

			h1
				font-size 30px
				color #ffffffaa
			
				.project
					font-family codeLight

				.beta
					font-family codeBold

		.links
			width 100%

			.container
				width 100%
				height 100%

				ul
					width 100%

					li
						width 100%
						color #eee

						a
							width 100%
							display block
							text-decoration none
							padding 6px 20px
							padding-right 0
							font-family "Input Mono", monospace

							span
								margin-right 6px
								font-size 12px
								visibility hidden

								&.right
									visibility visible

						&:hover
							background #ffffff22
						
						&.level2

							a
								padding-left 40px

						&:nth-child(4)
							margin-bottom 10px


		.footer
			position absolute
			bottom 20px 
			width 100%      
			
			p
				text-align center
				color #ffffffdd