section.container

	section.sidebar
		width 250px
		height 100%
		background darkBlueGrey
		position fixed
		top 0
		left 0

		.heading
			margin 50px auto
			flex-direction column

			img
				height 80px
				width 80px
				margin-bottom 20px

			h1
				font-size 30px
				color #ffffffaa
			
				.project
					font-family codeLight

				.beta
					font-family codeBold

		.subject
			background #fff2

			p
				padding-left 20px
				color #ddd
				font-variant small-caps
				font-family "Ubuntu"
				font-size 22px
				font-weight 500
				padding-bottom 3px

		.links
			width 100%
			// padding 20px 0
			height 50%
			overflow-y auto
			overflow-x hidden
			border-top 1px solid #0e0f10
			border-bottom 1px solid #0e0f10

			.container
				width 100%
				height 100%

				ul
					width 100%

					li
						width 100%
						color #eee

						a
							width 100%
							display block
							text-decoration none
							padding 5px 20px
							padding-right 0
							font-family "Input Mono", monospace
							font-family 'Ubuntu', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
							font-size 14px
							font-weight 300
							letter-spacing 0.5px

							span
								margin-right 6px
								font-size 10px
								visibility hidden

								&.right
									visibility visible

						&:hover
							background #ffffff33
						
						&.level2

							a
								padding-left 0
								margin-left 40px
								border-left 1px solid


		.footer
			position absolute
			bottom 20px 
			width 100%   
			
			p
				font-family -Oxygen, apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
				text-align center
				color #fff4