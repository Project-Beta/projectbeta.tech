section.container

	section.sidebar
		width 250px
		height 100%
		background darkBlueGrey
		position fixed
		top 0
		left 0

		.heading
			margin 50px auto
			flex-direction column

			img
				height 80px
				width 80px
				margin-bottom 20px

			h1
				font-size 30px
				color #ffffffaa
			
				.project
					font-family codeLight

				.beta
					font-family codeBold

		.links
			width 100%

			.container
				width 100%
				height 100%

				ul
					width 100%

					li
						width 100%
						color #eee

						a
							width 100%
							display block
							text-decoration none
							padding 6px 20px
							padding-right 0
							font-family "Input Mono", monospace

							span
								margin-right 6px
								font-size 12px
								visibility hidden

								&.right
									visibility visible

						&:hover
							background #ffffff22
						
						&.level2

							a
								padding-left 40px

						&:nth-child(4)
							margin-bottom 10px


		.footer
			position absolute
			bottom 20px 
			width 100%   
			
			p
				font-family -Oxygen, apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
				text-align center
				color #fff4