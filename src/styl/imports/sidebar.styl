section.container

	section.sidebar
		width 250px
		height 100%
		background darkBlueGrey
		position fixed
		top 0
		left 0
		border-right 1px solid #333
		font-family 'Ubuntu', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif
		overflow-y auto
		overflow-x hidden

		.heading
			padding 13% 0
			margin 0 auto
			background #161719
			flex-direction column

			img
				height 80px
				width 80px
				margin-bottom 20px

			h1
				font-size 30px
				color #ffffff
			
				.project
					font-family codeLight

				.beta
					font-family codeBold

		.subject
			background #fff2

			p
				padding-left 20px
				color #ddd
				font-variant small-caps
				font-family "Ubuntu"
				font-size 22px
				font-weight 500
				padding-bottom 3px

		.links
			width 100%
			padding-bottom 20px
			max-height 50%
			overflow-y auto
			overflow-x hidden
			border-top 1px solid #0e0f10
			border-bottom 1px solid #0e0f10

			.container
				overflow hidden

				ul
					width 100%

					li
						width 100%
						color #eee

						a
							width 100%
							display block
							text-decoration none
							padding 5px 20px
							padding-right 0
							font-size 14px
							font-weight 300
							letter-spacing 0.5px
							margin-left 14px
								
							&.folder
								margin-left 0px

								div
									width 0
									height 0
									border-style solid
									display inline-block
									margin-right 6px

									&.closed
										border-width 4px 0 4px 8px
										border-color transparent transparent transparent white

									&.open
										border-width 0 0 8px 8px
										border-color transparent transparent white transparent
									
									&#aboutTriangle
										&.open
											border-bottom-color yellow
										&.closed
											border-left-color yellow
								
									&#eventsTriangle
										&.open
											border-bottom-color blue
										&.closed
											border-left-color blue

						&:hover
							background #ffffff33
						
						&.level2

							a
								padding-left 10px
								margin-left 34px
								border-left 1px solid
							
							&.about

								a
									border-left-color #edda7e38 !important
							
							&.events

								a
									border-left-color #80baf945 !important

			&::-webkit-scrollbar
				width 8px
				
			&::-webkit-scrollbar-thumb
				background #bbb

			&::-webkit-scrollbar-track
				background #3e4044 
		
		.social
			width 100%

			ul
				width 100%
				padding-bottom 20px
				border-top 1px solid #0e0f10
				padding 5px 0

				li
					width 100%

					a
						width 100%
						text-decoration none
						padding 5px 0 5px 20px
						font-size 14px
						font-weight 300
						letter-spacing 0.5px
						justify-content flex-start

						svg
							height 15px
							margin 0 10px 0 0

							path
								fill white

							&:nth-child(2)
								margin 0 15px
				
					&:hover
						background #ffffff33