@media only screen and (max-width: 1000px)
	
	section.main
	
		h1.title
			font-size 40px

		.info
			max-height none
			
			.info-block
				width 100%
			
			div:last-child
				padding-bottom 40px

@media only screen and (max-width: 800px)

	html
		max-width 800px

@media only screen and (max-width: 450px)

	section.main
	
		#ui-view
			
			img
				width 125px

			h1.title
				font-size 44px
			
			h2.dates
				span
					font-size 30px
			
			.info

				p
					line-height 21px

		p
			font-size 15px

@media only screen and (max-height: 400px)

	#heading 
		h1
			display none