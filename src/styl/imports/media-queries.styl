@media only screen and (max-width: 1000px)
    
    section.main
    
        h1.title
            font-size 40px

        .info
            max-height none
            
            .info-block
                width 100%
            
            div:last-child
                padding-bottom 40px

@media only screen and (max-width: 800px)

    html
        max-width 800px

@media only screen and (max-width: 400px)

    section.main
        
        img
            width 125px

        h1.title
            font-size 35px

            span.version
                font-size 75%
        
        h2.dates
            span
                font-size 30px
        
        .info

            p
                font-size 15px
                line-height 21px