::-moz-selection
    color #fff
    background #77dd77


::selection
    color: #fff; 
    background #77dd77


section.welcome 
	width 100%
	height 100%
	display flex
	flex-flow column
	align-items center
	justify-content center

	div.top
		height 100%
		display flex
		align-items flex-end
		
		h1 
			color limed-spruce
			font-size 5vw
			font-weight 100

			code.light
				font-family code-light

			code.bold 
				font-family code-bold

			@media screen and (max-width: small)
				font-size 13vw
				
	hr
		width 100%
		background #eee
		margin 1% 0
		border none
		height 2px
	
	div.bottom
		height 100%
		width 100%
		display flex
		justify-content center
		
		h2 
			color silver-sand
			letter-spacing 2px
			font 100 18px/1 anonymous-pro
			
			@media screen and (max-width: small)
				margin 10px 0 0 0
				width 90%
				overflow-wrap break-word
				text-align center