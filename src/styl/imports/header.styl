header.masthead
	width 100%
	height 8vh
	background linear-gradient(150deg, #222, #544040, #b9512b)
	color white

	.container
		justify-content space-around
		max-width 1200px
		
		> a
			position absolute
			bottom -25%
			height 100%

			img
				height 150%
				background linear-gradient(150deg, #4f3e3d, #503e3e 90%, #5a413e)
				border-radius 50%
				width auto
				border 4px solid #503e3e
		
		.links
			width 100%

			a
				color white
				font-size 1.3em
				font-variant small-caps
				padding-bottom 5px
				font-family codeBold
				font-weight bold
				letter-spacing 2.5px

				&:hover
					padding-bottom 4px
					border-bottom 1px solid

				&:nth-child(2)
					margin 0 5vw

		.space
			width 20vh

		h1
			font-size 6em
			
			span.codeLight
				font-family codeLight
				font-weight 100

			span.codeBold
				font-family codeBold
