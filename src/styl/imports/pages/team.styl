#ui-view

	#team

		.gallery
			flex-wrap wrap
			max-width 100%
			justify-content center
			align-items flex-start
			margin-bottom 30px

			.section
				width 180px
				margin 0 20px 20px 20px
				padding 0 0 10px 0
				display flex
				flex-direction column
				align-items center
				height 280px

				img
					width 100%
					height auto
					margin-bottom 10px
					display block
					border-bottom 1px solid #000

				h2
					text-transform unset
					font-size 19px
					text-align center
					padding 0 8px
					color #ddd

				h3
					text-transform uppercase
					color #888
					font-size 14px
					text-align center
					padding 8px