@require "../imports/base.styl"

section.container
	overflow-x hidden

section.main
	height 100%
	margin-left 250px
	overflow-y scroll
	overflow-x hidden
	align-items flex-start
	-webkit-overflow-scrolling touch

	.container
		max-width 1000px
		width 90%
		min-height 100vh
		flex-direction column
		margin 0 0 4vh 0

	p
		font-size 16px
		line-height 24px
		letter-spacing .5px
	
	img
		width 150px
		margin 4vh 0 0 0		

	h1.title
		font-size 60px
		margin 4vh 0 0 0

		span.version
			font-size 45px
			font-family "Ubuntu Mono", 'Courier New', Courier, monospace
	
	h2.dates
		color #d66d4d
		margin 4vh 0 0 0
		text-transform uppercase
		font-size 23px
		font-weight 100
		font-family "Ubuntu Mono", 'Courier New', Courier, monospace

		span
			font-size 150%
			padding 0 10px

			&:nth-child(2)
				border-right 3px solid
				border-left 3px solid

	.hr
		height 4px
		width 100%
		margin 4vh 0
	
	.info
		width 100%
		height auto
		justify-content space-between
		align-items flex-start

		.about, .contact
			width 45%

			h1
				font-size 27px
				font-weight 100
				padding-bottom 5px
				display inline-block
			
			h2
				margin 20px 0 10px 0
				font-size 17px
				font-weight 100
				text-transform uppercase
				padding 2px 0 2px 5px
			
			p
				padding 10px 0 20px 0
			
			a
				padding-bottom 3px
				border-bottom 1px solid
				text-decoration none
				color #d66d4d

				&.contact
					display table
					margin 5px 0
					border none
					width 100%

			.seperator
				padding 0 15px
				user-select none
		
		.contact

			p
				padding 0

	&.light
		background #f6f6f6

		p
			color #111
		
		h1.title
			color #000

			span.version
				color #666
		
		h2.dates

			span
				border-color #bbb
		
		.hr
			background #ccc
		
		.info

			.about, .contact

				h1
					color #111
				
				h2
					background #ddd

				h2, p
					color #222
				
				a:hover
					color #000

				.seperator
					color #bbb

	&.dark
		background #272b2f

		p
			color #eee
		
		h1.title
			color #fff

			span.version
				color #909090
		
		h2.dates

			span
				border-color #444
		
		.hr
			background #555
		
		.info

			.about, .contact

				h1
					color #ddd
				
				h2
					background #1d2023

				h2, p
					color #bbb
				
				a:hover
					color #fff

				.seperator
					color #666


@import "../imports/media-queries"