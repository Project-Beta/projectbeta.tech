@require "../imports/base.styl"

section.container
	overflow-x hidden

	section.main
		height 100%
		margin-left 250px
		overflow-y scroll
		overflow-x hidden
		background #ddd
		align-items flex-start
		-webkit-overflow-scrolling touch
		background linear-gradient(164deg,#f6f6f6 52%,#fff 47%);

		.container
			max-width 800px
			width 90%
			height auto
			flex-direction column

			p
				color: #111;
				font-size: 16px;
				line-height: 24px;
				margin: 0 0 60px 0;
				letter-spacing: .5px;
			
			img
				width: 30%;
				margin: 60px 0;

@import "../imports/media-queries/*"