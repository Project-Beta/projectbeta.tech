@require "imports/base.styl"

section.container
	overflow-x hidden

section.main
	height 100%
	margin-left 250px
	overflow-y auto
	overflow-x hidden
	align-items flex-start

	> .container
		max-width 1000px
		width 90%
		min-height 100vh
		flex-direction column
		height auto
		justify-content flex-start

		>.container
			margin 5vh 0
		
		> img
			width 150px
			margin 4vh 0 0 0

		> h1
			font-size 60px
			margin 4vh 0 0 0

			span.version
				font-size 45px
				font-family "Ubuntu Mono", 'Courier New', Courier, monospace

		&::after
			content ''
			height 7px
			width 100%
			background linear-gradient(to right, #ff5f6d, #ffc371)
			position absolute
			bottom 0
		
		.ui-state
			
			h1
				font-size 35px
				font-weight 100
				padding-bottom 10px
				border-bottom 1px solid
				text-align center
				text-transform uppercase
				margin-bottom 4vh
			
			> p
				margin 0 0 20px 0

			a
				padding-bottom 3px
				border-bottom 1px solid
				text-decoration none

			.section
				margin-bottom 20px
				padding 15px
				border 1px solid

				h2
					font-size 21px
					padding 0 0 6px 0
					font-weight 300
					text-transform uppercase
			
	p
		font-size 16px
		line-height 24px
		letter-spacing .5px

	a
		padding-bottom 3px
		border-bottom 1px solid
		text-decoration none
		color #d66d4d

	h2.dates
		color #d66d4d
		margin 4vh 0 0 0
		text-transform uppercase
		font-size 23px
		font-weight 100
		font-family "Ubuntu Mono", 'Courier New', Courier, monospace

		span
			font-size 150%
			padding 0 10px

			&:nth-child(2)
				border-right 2px solid
				border-left 2px solid

	.hr
		height 0px
		width 100%
		margin 4vh 0
	
	.info
		width 100%
		height auto
		align-items flex-start
		margin-top 60px
		flex-wrap wrap
		flex-direction column
		max-height 550px

		.info-block
			width 45%
			padding 3vh 0

			h1
				font-size 27px
				font-weight 500
				padding-bottom 5px
				border-bottom 1px solid #bbb
			
			h2
				margin 30px 0 0 0
				font-size 17px
				font-weight bold
				text-transform uppercase
				padding 0 0 6px 0
			
			p
				padding 20px 0 0 0
		
	
@import "imports/themes"
@import "imports/pages/*"
@import "imports/media-queries"